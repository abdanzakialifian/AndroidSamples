<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tooltip_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07 Jul 2024"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tooltip_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harga beli/gram"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tooltip_buy_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IDR 830,000.00"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tooltip_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harga jual/gram"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tooltip_sell_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IDR 800,000.00"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp" />

</LinearLayout>
